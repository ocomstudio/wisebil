
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Enterprises can be created by any authenticated user.
    // They can be read/updated only by members of the enterprise.
    // They can only be deleted by the owner.
    match /enterprises/{enterpriseId} {
      allow read, update: if request.auth != null && request.auth.uid in resource.data.memberIds;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }

    // Invitations can be created by authenticated users.
    // They can be read, updated, or deleted only by the invited user.
    match /invitations/{invitationId} {
        allow read, update, delete: if request.auth != null && request.auth.token.email == resource.data.email;
        allow create: if request.auth != null;
    }
  }
}
