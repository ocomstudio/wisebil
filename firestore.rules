
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Les utilisateurs ne peuvent lire et écrire que leurs propres documents.
    // L'UID de l'utilisateur doit correspondre à l'ID du document dans la collection 'users'.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Les invitations peuvent être lues par l'utilisateur invité
    // et créées/modifiées par un utilisateur authentifié.
    match /invitations/{invitationId} {
      allow read: if request.auth != null && resource.data.email == request.auth.token.email;
      allow create, update, delete: if request.auth != null;
    }

    // Les entreprises peuvent être lues par les membres
    match /enterprises/{enterpriseId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.memberIds;
    }
  }
}
